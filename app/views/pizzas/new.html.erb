<h1>Create New Pizza</h1>

<%= form_for @pizza do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
    <%= f.label :restaurant %>
    <%= f.collection_select :restaurant, Restaurant.all, :name, :address %>
    <%= f.submit %>
<% end %>

